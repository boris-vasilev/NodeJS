<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/public/style/site.css" type="text/css">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <ul class="menu">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li></li>
            {{#if currentUser}}
                <li>{{currentUser.username}}</li>
                <form id = "logout-form" action="/users/logout" method="POST">
                    <a href="javascript:document.getElementById('logout-form').submit()">Logout</a>
                </form>
                <li><a href="/article/add">Add article</a></li>
                <li><a href="/article/all">All articles</a></li>
                <li><a href="/article/my">My articles</a></li>
            {{else}}
                <li><a href="/users/register">Register</a></li>
                <li><a href="/users/login">Login</a></li>
            {{/if}}
        </ul>
        {{#if globalError}}
            <h3>{{globalError}}</h3>
        {{/if}}
        {{{body}}}
    </div>
</body>
</html>